[user]
  name = Anton Borsch
  email = anton.borsch@gmail.com
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  aa = add --all
  amend = commit --amend
  br = branch
  co = checkout
  ci = commit
  di = diff
  dc = diff --cached
  div = divergence
  fa = fetch --all -p
  ff = merge --ff-only
  gn = goodness
  gnc = goodness --cached
  h = !git head
  head = !git l -1
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  pullff = pull --ff-only
  r = !git --no-pager l -20
  ra = !git r --all
  st = status
  tree = !git la --oneline
[core]
  excludesfile = ~/.gitignore
  editor = /usr/local/bin/sublime -n -w || vim -f
  autocrlf = false
  safecrlf = true
[apply]
  whitespace = warn
[format]
  pretty = format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[branch]
  autosetuprebase = always
[push]
  default = current
